# ============================================
# Environment Variables for Job Scraper API
# ============================================
# Copy this file to .env and fill in your values
# For DigitalOcean deployment, set these in App Platform settings

# ============================================
# Flask/API Configuration
# ============================================
DEBUG=False
PORT=8080
HOST=0.0.0.0

# ============================================
# Scraper Configuration
# ============================================
HEADLESS_MODE=True
MAX_PAGES_PER_KEYWORD=3
MAX_JOBS_GLASSDOOR=20
DEFAULT_LOCATION=United States

# ============================================
# Scraping Limits (Anti-abuse)
# ============================================
MAX_KEYWORDS_PER_REQUEST=3
MAX_PAGES_PER_REQUEST=5

# ============================================
# Playwright Browser Configuration
# ============================================
# Path where Playwright browsers are installed
# Docker default: /ms-playwright
# DigitalOcean: Set this if using custom path
# Render: /opt/render/project/src/browsers
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO

# ============================================
# Gunicorn Configuration (Production Server)
# ============================================
GUNICORN_WORKERS=1
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=600

# ============================================
# Platform Identification (Optional)
# ============================================
PLATFORM=DigitalOcean
# Set DIGITALOCEAN=true when deploying to DigitalOcean
DIGITALOCEAN=true

# ============================================
# Output Configuration
# ============================================
OUTPUT_FILE=jobs_output.json

# ============================================
# DEPLOYMENT NOTES
# ============================================
# For DigitalOcean App Platform:
# 1. Set these variables in the App Platform dashboard
# 2. Ensure PORT is set (App Platform automatically sets this)
# 3. Set HEADLESS_MODE=True for production
# 4. Adjust GUNICORN_TIMEOUT based on your scraping needs
# 5. Set DIGITALOCEAN=true to enable platform-specific optimizations

